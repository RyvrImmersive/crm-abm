# Company Intelligence Application Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# AstraDB Configuration (Required)
ASTRA_DB_TOKEN=your_astra_db_token_here
ASTRA_DB_ENDPOINT=your_astra_db_endpoint_here

# =============================================================================
# AI & RESEARCH APIs (Required for core functionality)
# =============================================================================

# Langflow Configuration
LANGFLOW_API_KEY=your_langflow_api_key_here
LANGFLOW_FLOW_URL=your_langflow_flow_url_here

# Exa Search API (Required for similar companies)
EXA_API_KEY=your_exa_api_key_here

# Tavily Research API (Required for similar companies)
TAVILY_API_KEY=your_tavily_api_key_here

# =============================================================================
# APPLICATION CONFIGURATION (Optional)
# =============================================================================

# Data freshness threshold in days (default: 360)
DATA_FRESHNESS_DAYS=360

# Application environment
NODE_ENV=development
DEBUG=True

# =============================================================================
# LEGACY/OPTIONAL APIs (Not required for core functionality)
# =============================================================================

# HubSpot API (Optional - for CRM integration)
HUBSPOT_API_KEY=your_hubspot_api_key_here

# Clay API (Optional - for data enrichment)
CLAY_API_KEY=your_clay_api_key_here
CLAY_API_BASE_URL=https://api.clay.com/v1
